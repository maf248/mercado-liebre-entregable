<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/create" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" <% if (typeof body != 'undefined') { %> value="<%= body.name %>"<% } %>>
						<% if (typeof errors != "undefined") {
							errors.forEach ( error => { 
								if (error.param == "name") { %>
									<p><%= error.msg %></p>
							<% } }) } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" <% if (typeof body != 'undefined') { %> value="<%= body.price %>"<% } %>>
						<% if (typeof errors != "undefined") {
							errors.forEach ( error => { 
								if (error.param == "price") { %>
									<p><%= error.msg %></p>
							<% } }) } %>
					</div>
					
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<% categories.forEach(category => { %>
							<option value="<%= category.id %>"<% if (typeof body != 'undefined' && body.category == category.id) { %> selected="selected"<% } %>><%= category.name %></option>
							<% }); %>
						</select>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="number" min="0" max="100" id="discount" name="discount" placeholder="Ej: 15 %" class="form-input" <% if (typeof body != 'undefined') { %> value="<%= body.discount %>"<% } else { %> value="0" <% } %>>
					</div>
					<div class="col-12 col-md-6">
						<label for="brand" class="form-label">Marca:</label>
						<select name="brand" id="brand" class="form-input" >
							<option value="">Elegí</option>
							<% brands.forEach(brand => { %>
							<option value="<%= brand.id %>"<% if (typeof body != 'undefined' && body.brand == brand.id) { %> selected="selected"<% } %>><%= brand.name %></option>
							<% }); %>
						</select>
						<% if (typeof errors != "undefined") {
							errors.forEach ( error => { 
								if (error.param == "brand") { %>
									<p><%= error.msg %></p>
							<% } }) } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="stock" class="form-label">Stock:</label>
						<input type="number" id="discount" name="stock" class="form-input" <% if (typeof body != 'undefined') { %> value="<%= body.stock %>"<% } else { %> value="1" <% } %>>
					</div>
					<div class="col-12 col-md-6">
						<label for="productImage" class="form-label">Imagen:</label>
						<input type="file" name="productImage" accept="image/*" class="form-input"> 
						<% if (typeof errors != "undefined") {
							errors.forEach ( error => { 
								if (error.param == "productImage") { %>
									<p><%= error.msg %></p>
							<% } }) } %>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input" <% if (typeof body != 'undefined') { %> ><%= body.description %></textarea> <% } else { %> ></textarea> <% } %>
						<% if (typeof errors != "undefined") {
							errors.forEach ( error => { 
								if (error.param == "description") { %>
									<p><%= error.msg %></p>
							<% } }) } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>